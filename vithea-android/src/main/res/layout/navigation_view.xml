<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nav_bg_color">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/nextExerciseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_navigate_next_white_24dp"
                android:layout_margin="20dp"/>
            <TextView
                android:id="@+id/nextExerciseTextView"
                android:layout_alignTop="@+id/nextExerciseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginTop="60dp"
                android:layout_alignRight="@+id/nextExerciseButton"
                android:layout_alignEnd="@+id/nextExerciseButton"
                android:text="PrÃ³ximo"/>
        </RelativeLayout>

        <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/previousExerciseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_navigate_before_white_24dp"
                android:layout_margin="20dp"/>
            <TextView
                android:id="@+id/previousExerciseTextView"
                android:layout_alignTop="@+id/previousExerciseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:layout_marginTop="60dp"
                android:layout_alignLeft="@+id/previousExerciseButton"
                android:layout_alignParentBottom="@+id/previousExerciseButton"
                android:text="Anterior"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/endExerciseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_home_white_24dp"
                android:layout_margin="20dp"/>
            <TextView
                android:id="@+id/endExerciseTextView"
                android:layout_alignTop="@+id/endExerciseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginTop="60dp"
                android:layout_alignRight="@+id/endExerciseButton"
                android:layout_alignParentBottom="@+id/endExerciseButton"
                android:text="Terminar"/>
        </RelativeLayout>
</RelativeLayout>