<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/nav_bg_color">
	
	<TableLayout
		android:id="@+id/results"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/end_table_border_color"
	    android:shrinkColumns="0">

	    <LinearLayout
	        android:id="@+id/tableRow0"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content">
	        
	       <TextView
	            android:id="@+id/resultsTitleView"
	            android:text="@string/resultsTitle"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_vertical"
	            android:paddingLeft="20dp"
				android:paddingTop="10dp"
	            android:paddingBottom="10dp"
	            android:background="@color/list_header_color"
				android:textColor="@color/list_header_text_color"
				android:textSize="24sp"
				android:textStyle="bold"
	            />         
	    </LinearLayout>
	    
	    <TableRow
	        android:id="@+id/tableRow1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="1dp"
	        android:background="@color/end_bg_color">
	        
	       <TextView 
	            android:id="@+id/totalView"
	            android:text="@string/total_exercises"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingLeft="20dp"
	            android:paddingTop="10dp"
	            android:paddingBottom="10dp"
	            android:gravity="right|top"
	            android:textStyle="bold"
	            android:textAppearance="?android:attr/textAppearanceLarge"           
	            />
	       <TextView 
	            android:id="@+id/totalViewResult"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingLeft="20dp"
	            android:paddingRight="20dp"
	            android:paddingTop="10dp"
	            android:paddingBottom="10dp"
	            android:gravity="left|top"
	            android:textAppearance="?android:attr/textAppearanceLarge"
	            />
	                 
	    </TableRow>
	    
	    <TableRow
	        android:id="@+id/tableRow2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="1dp"
	        android:background="@color/end_bg_color">
	        
	       <TextView 
	            android:id="@+id/skippedView"
	            android:text="@string/skipped_exercises"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingLeft="20dp"
	            android:paddingTop="10dp"
	            android:paddingBottom="10dp"
	            android:gravity="right|top"
	            android:textStyle="bold"
	            android:textAppearance="?android:attr/textAppearanceLarge"
	            />
	       <TextView 
	            android:id="@+id/skippedViewResult"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingLeft="20dp"
	            android:paddingRight="20dp"
	            android:paddingTop="10dp"
	            android:paddingBottom="10dp"
	            android:gravity="left|top"
	            android:textAppearance="?android:attr/textAppearanceLarge"
	            />          
	    </TableRow>
	    
	    <TableRow
	        android:id="@+id/tableRow3"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="1dp"
	        android:background="@color/end_bg_color">
	        
	       <TextView
	            android:id="@+id/correctView"
	            android:text="@string/correct_exercises"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingLeft="20dp"
	            android:paddingTop="10dp"
	            android:paddingBottom="10dp"
	            android:gravity="right|top"
	            android:textStyle="bold"
	            android:textAppearance="?android:attr/textAppearanceLarge"
	            />
	       <TextView 
	            android:id="@+id/correctViewResult"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingLeft="20dp"
	            android:paddingRight="20dp"
	            android:paddingTop="10dp"
	            android:paddingBottom="10dp"
	            android:gravity="left|top"
	            android:textAppearance="?android:attr/textAppearanceLarge"
	            />          
	    </TableRow>
	    
	    <TableRow
	        android:id="@+id/tableRow4"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="1dp"
	        android:background="@color/end_bg_color">
	        
	       <TextView 
	            android:id="@+id/distractorView"
	            android:text="@string/avg_distractor_hits"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"	            
	            android:paddingLeft="20dp"
	            android:paddingTop="10dp"
	            android:paddingBottom="10dp"
	            android:gravity="right|top"
	            android:textStyle="bold"
	            android:textAppearance="?android:attr/textAppearanceLarge"
	            />
	       <TextView 
	            android:id="@+id/distractorViewResult"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"	           
	            android:paddingLeft="20dp"
	            android:paddingRight="20dp"
	            android:paddingTop="10dp"
	            android:paddingBottom="10dp"
	            android:gravity="left|top"
	            android:textAppearance="?android:attr/textAppearanceLarge"
	            />          
	    </TableRow>
	        
	</TableLayout>
	
</RelativeLayout>