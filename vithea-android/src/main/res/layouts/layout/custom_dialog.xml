<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"

   >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/dialog_top"
        android:padding="0dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="56dp"
                android:layout_height="60dp"
                android:layout_marginLeft="2dp"
                app:srcCompat="@drawable/logo1" />

            <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="Tem a certeza que pretende voltar o menu inicial?"
            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"

            android:textColor="@android:color/white"
            android:layout_marginLeft="5dp"/>

        </LinearLayout>


    </FrameLayout>




    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/dialog_bottom"
        android:layout_marginTop="-2dp"
        android:padding="0dp"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="400dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:text="Ao voltar ao menu inicial perderÃ¡ todo o seu progresso. " />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/yes"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/multiplechoice"
                    android:minWidth="100dp"
                    android:text="@string/yes"
                    android:textColor="@color/white"
                    android:layout_marginBottom="5dp"/>

                <Button
                    android:id="@+id/no"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/multiplechoice"
                    android:minWidth="100dp"
                    android:text="@string/no"
                    android:textColor="@color/white"
                    android:layout_marginBottom="5dp"/>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>


</LinearLayout>