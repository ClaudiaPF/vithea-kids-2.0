<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/layer">

    <item android:top="3dp" android:left="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="30dip"/>

            <solid android:color="@color/exercise_button_color_shadow"/>

        </shape>
    </item>             <!--shadow effect-->


    <item android:bottom="4dp" android:right="4dp" android:id="@+id/buttonChoice"
        >
        <shape android:shape="rectangle">
            <solid android:color="@color/exercise_button_color_selected"/>
            <corners android:radius="30dip"/>

        </shape>
    </item>


</layer-list>