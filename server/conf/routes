# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# HomePage
POST        /app/signup       		controllers.SecurityController.signup
POST        /app/login                  controllers.SecurityController.login
POST        /app/logout                 controllers.SecurityController.logout

# Child
POST        /app/registerchild         	controllers.AdminChildCtrl.registerchild
POST        /app/editchild/:child  	controllers.AdminChildCtrl.editchild(child:Long)
GET         /app/listchildren           controllers.AdminChildCtrl.getChildren
POST        /app/deletechild/:child     controllers.AdminChildCtrl.deleteChild(child:Long)
# Exercise
POST        /app/registerexercise           	controllers.AdminExerciseCtrl.registerExercise
POST        /app/editexercise/:exercise  	controllers.AdminExerciseCtrl.editExercise(exercise:Long)
GET         /app/listexercises                  controllers.AdminExerciseCtrl.getExercises
POST        /app/deleteexercise/:exercise       controllers.AdminExerciseCtrl.deleteExercise(exercise:Long)
### Topic
GET         /app/listtopics                  controllers.AdminExerciseCtrl.getTopics
### Level
GET         /app/listlevels                  controllers.AdminExerciseCtrl.getLevels
### Resources
GET         /app/listresources               controllers.AdminExerciseCtrl.getResources
### Upload
POST        /app/uploadresources/:type       controllers.AdminExerciseCtrl.uploadResources(type:String)

###
### Child Application
###

### Sequences
GET         /app/listsequences              controllers.ChildAppCtrl.getSequences